@page
@model HospiEnCasa.App.FrontEnd.Pages.Pacientes.ListaPacientes
@{
    ViewData["Title"] = "Lista de Pacientes";
}
    <div class="container bg-white w-auto p-3 m-5">
        <table
          id="table"
          class="table table-striped table-bordered h-75"
          style="width: 100%"
        >
          <thead>
            <tr>
              <th>Documento</th>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th>Telefono</th>
              <th>Ciudad</th>
              <th>Genero</th>
              <th>Fecha de Nacimiento</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var paciente in Model.Pacientes)
            {
              <tr>
                <td>@paciente.Id</td>
                <td>@paciente.Nombres</td>
                <td>@paciente.Apellidos</td>
                <td>@paciente.Telefono</td>
                <td>@paciente.Ciudad</td>
                <td style="text-transform: capitalize;">@paciente.Genero</td>
                <td>@paciente.FechaNacimiento</td>
                <td class="d-fle align-items-center">
                  <a asp-page="/Pacientes/DetallePaciente" asp-route-IdPaciente="@paciente.IdPaciente" class="ml-2"><i class="fa fa-cog" aria-hidden="true"></i></a>
                  <a href="#" class="ml-4"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                </td>
            </tr>
            }
          </tbody>
        </table>
      </div>