@page
@model HospiEnCasa.App.FrontEnd.Pages.Pacientes.NuevoFamiliar
@{
    ViewData["Title"] = "Nuevo Familiar";
}

        <div class="card p-2 m-5">
          <div class="card-body">
              <div class="card-title text-center">
                  <p class="form-title font-weight-bold">Formulario Familiar Designado</p>

              </div>
              <form>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <label class="input-group-text" for="PacienteID">Paciente</label>
                  </div>
                  <select class="custom-select" id="pacienteID">
                    <option selected>-- Selecciona un Paciente -- (Desde la BD) </option>
                    <option value="paciente1">Documento1 - PacienteNombre1</option>
                    <option value="paciente2">Documento2 - PacienteNombre1</option>
                    <option value="paciente3">...</option>
                  </select>
              </div> <br>

              <div class="form-group">
                      <div class="row">
                          <div class="col">
                              <input type="text" class="form-control" id="nombre" placeholder="Nombres de Familiar">
                          </div>
                          <div class="col">
                              <input type="text" class="form-control" id="apellidos" placeholder="Apellidos de Familiar">
                          </div>
                      </div>
                  </div>    
                      <div class="form-group mt-4">
                          <div class="row">
                              <div class="col">
                                  <input type="text" class="form-control" id="cedula" placeholder="Documento">
                              </div>
                              <div class="col">
                                  <input type="text" class="form-control" id="telefono" placeholder="Teléfono">
                              </div>
                          </div>
                      </div>
                      <div class="form-group mt-4">
                        <input type="text" class="form-control" id="correo" placeholder="Correo Electrónico">
                    </div>
                    
                      <div class="input-group mb-3">
                          <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Género</label>
                          </div>
                          <select class="custom-select" id="inputGroupSelect01">
                            <option selected>-- Selecciona una opción --</option>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                            <option value="otro">Otro</option>
                          </select>
                      </div>

                    <div class="form-group mt-4">
                          <input type="text" class="form-control" id="parentesco" placeholder="Parentesco">
                      </div>
                      <button type="button" class="btn btn-primary btn-lg btn-block">Añadir Familiar</button>
              </form>
          </div>
        </div>