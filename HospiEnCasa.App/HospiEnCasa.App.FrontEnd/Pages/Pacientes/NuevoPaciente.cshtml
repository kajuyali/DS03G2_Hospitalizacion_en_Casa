@page
@model HospiEnCasa.App.FrontEnd.Pages.Pacientes.NuevoPaciente
@{
    ViewData["Title"] = "Nuevo Paciente";
}

        <div class="card p-2 m-5">
          <div class="card-body">
            <div class="card-title text-center">
              <p class="form-title font-weight-bold">Formulario Paciente</p>
            </div>
            <form method="post">
              <div class="form-group">
                <div class="row">
                  <input type="hidden" asp-for="Persona.IdPersona">
                  <input type="hidden" asp-for="Paciente.IdPac">
                  <div class="col">
                    <input type="text" class="form-control" asp-for="Persona.Nombres" placeholder="Nombres">
                  </div>
                  <div class="col">
                    <input type="text" class="form-control" asp-for="Persona.Apellidos" placeholder="Apellidos">
                  </div>
                </div>
              </div> 
                <div class="form-group mt-4">
                  <div class="row">
                    <div class="col">
                      <input type="text" class="form-control" asp-for="Persona.Id" placeholder="Documento">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" asp-for="Persona.Telefono" placeholder="Teléfono">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <label class="input-group-text" for="genero">Genero</label>
                    </div>
                    <select class="custom-select" id="genero" asp-for="Persona.Genero">
                      <option selected>-- Selecciona una opción --</option>
                      <option value="masculino">Masculino</option>
                      <option value="femenino">Femenino</option>
                      <option value="otro">Otro</option>
                    </select>
                  </div>
                </div>
                <div class="form-group mt-4">
                  <input type="text" class="form-control" asp-for="Paciente.Direccion" placeholder="Dirección">
                </div>
                <div class="form-group mt-4">
                  <div class="row">
                    <div class="col">
                      <input type="text" class="form-control" asp-for="Paciente.Ciudad" placeholder="Ciudad">
                    </div>
                    <div class="col">
                      <input type="date" class="form-control" asp-for="Paciente.FechaNacimiento">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                <div class="row">
                  <div class="col">
                    <input type="text" class="form-control" asp-for="Paciente.Latitud" placeholder="Latitud">
                  </div>
                  <div class="col">
                    <input type="text" class="form-control" asp-for="Paciente.Longitud" placeholder="Longitud">
                    <input type="hidden" asp-for="Paciente.IdPersona" value="Persona.IdPersona">
                  </div>
                </div>
              </div> 
              <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Añadir Paciente</button>
              </div>
            </form>
          </div>
        </div>