@page
@model HospiEnCasa.App.FrontEnd.Pages.Medicos.ListaMedicos
@{
    ViewData["Title"] = "Lista de Medicos";
}

<div class="container bg-white w-auto p-3 m-5">
        <table
          id="table"
          class="table table-striped table-bordered h-75"
          style="width: 100%"
        >
          <thead>
            <tr>
              <th>Documento</th>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th>Telefono</th>
              <th>Especialidad</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var medico in Model.Medicos)
            {
              <tr>
              <td>@medico.Id</td>
              <td>@medico.Nombres</td>
              <td>@medico.Apellidos</td>
              <td>@medico.Telefono</td>
              <td>@medico.Especialidad</td>
              <td class="d-fle align-items-center">
                <a href="#" class="ml-2"><i class="fa fa-cog" aria-hidden="true"></i></a>
                <a href="#" class="ml-4"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </td>
            </tr>
            }
          </tbody>
        </table>
      </div>