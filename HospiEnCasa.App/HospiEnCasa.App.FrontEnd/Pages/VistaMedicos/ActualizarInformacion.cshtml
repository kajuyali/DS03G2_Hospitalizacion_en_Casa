@page
@model HospiEnCasa.App.FrontEnd.Pages.VistaMedicos.ActualizarInformacion
@{
    ViewData["Title"] = "Actualizar Mi Informacion";
}
<form method="post">
<div class="container mt-5">
        <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
                <div class="col-sm-4 bg-card user-profile">
                    <div class="card-block text-center text-white">
                        <div class="m-b-25">
                            <img src="~/assets/doctor.png" class="img-radius" alt="User-Profile-Image">
                        </div>
                        <h6 class="f-w-600 text-dark">@Model.Medico.Nombres  @Model.Medico.Apellidos</h6>
                        <p class="text-dark">Médico</p>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="card-block">
                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Información del Médico</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Nombres</p>
                                <h6 class="text-muted f-w-400">@Model.Medico.Nombres</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Apellidos</p>
                                <h6 class="text-muted f-w-400">@Model.Medico.Apellidos</h6>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Documento de Identidad</p>
                                <h6 class="text-muted f-w-400">@Model.Medico.Id</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Teléfono</p>
                                <div class="group mb-3">
                                    <input required="" type="text" class="input f-w-600" placeholder="@Model.Medico.Telefono" asp-for="Medico.Telefono">
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-6 mt-2">
                                <p class="m-b-10 f-w-600">Especialidad</p>
                                <div class="group mb-3">
                                    <input required="" type="text" class="input f-w-600" placeholder="@Model.Medico.Especialidad" asp-for="Medico.Especialidad">
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 mt-2">
                                <p class="m-b-10 f-w-600">Registro Médico</p>
                                <div class="group mb-3">
                                    <input required="" type="text" class="input f-w-600" placeholder="@Model.Medico.Registro" asp-for="Medico.Registro">
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Medico.IdMedico">
                            <input type="hidden" asp-for="Medico.IdPersona">
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary mt-5">Guardar Cambios</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>