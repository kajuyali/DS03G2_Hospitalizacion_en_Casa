@page
@model HospiEnCasa.App.FrontEnd.Pages.Familiares.ActualizarFamiliar
@{
    ViewData["Title"] = "Actualizar Familiar";
}

<form method="post">
<div>
    <div class="container mt-5">
        <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
                <div class="col-sm-4 bg-card user-profile">
                    <div class="card-block text-center text-white">
                        <div class="m-b-25">
                            <img src="~/assets/paciente.png" class="img-radius" alt="User-Profile-Image">
                        </div>
                        <h6 class="f-w-600 text-dark">@Model.Familiar.Nombres  @Model.Familiar.Apellidos</h6>
                        <p class="text-dark">Familiar Asignado</p>
                        <div class="mt-5">
                        </div>
                        <div class="mt-3">
                          <button class="btn btn-primary btn-sm btn-round" onClick="history.go(-1); return false;">
                            <i class="fa fa-arrow-left mr-1"></i>
                            Volver al Familiar
                          </button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="card-block">
                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Información del Familiar</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Nombres</p>
                                <h6 class="text-muted f-w-400">@Model.Familiar.Nombres</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Apellidos</p>
                                <h6 class="text-muted f-w-400">@Model.Familiar.Apellidos</h6>
                            </div>
                        </div>
                        <div class="row mt-3">
                          <div class="col-sm-6">
                                <p p class="m-b-10 f-w-600">Documento de Identidad</p>
                                <h6 class="text-muted f-w-400">@Model.Familiar.Id</h6>
                          </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Teléfono</p>
                                <div class="group">
                                    <input type="tel" class="input f-w-600" placeholder="@Model.Familiar.Telefono" asp-for="Familiar.Telefono">
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                </div>
                            
                            </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-6 mt-2">
                                    <p class="m-b-10 f-w-600">Parentesco</p>
                                    <h6 class="text-muted f-w-400">@Model.Familiar.Parentesco</h6>
                                </div>
                                <div class="col-sm-6 mt-2">
                                    <p class="m-b-10 f-w-600">Correo Electrónico</p>
                                    <div class="group">
                                        <input type="email" class="input f-w-600" placeholder="@Model.Familiar.Correo" asp-for="Familiar.Correo">
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Familiar.IdFamiliar" value="@Model.Familiar.IdFamiliar"/>
                            <input type="hidden" asp-for="Familiar.IdPersona" value="@Model.Familiar.IdPersona"/>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary mt-5">Guardar Cambios</button>
                            </div>

                      </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
</div>
</form>
